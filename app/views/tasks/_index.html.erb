<table>
  <thead>
    <tr>
      <th><h3>Title</h3></th>
      <th><h3>Description</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <%if @tasks.any? %>
  	<% @tasks.each do |task|%>
    <%if task.archived != 1 %>
    <tr>
      <div class="row">
        <td><div class="col-sm-2"></div>
        <div class="col-sm-12">
          <%=task.title %>
        </div></td>

        <td><div class="col-sm-2"></div>
        <div class="col-sm-12">
          <%= task.description %>
        </div></td>

        <td><div class="col-sm-2">
          <button class="btn btn-info archive" data-id="<%=task.id%>"> Archive </button>
        </div></td>

        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </div>
    </tr>
  	<%end %>
    <%end %>
  <%end%>

  </tbody>

</table>

